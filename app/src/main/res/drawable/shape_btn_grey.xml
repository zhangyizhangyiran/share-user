<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- On pressed -->
    <item android:state_focused="false" android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#eaeaea"></solid>
                    <!-- 线的宽度，颜色灰色 -->
                    <stroke android:width="1px" android:color="#dddddd"></stroke>

                    <!-- 矩形的圆角半径 -->
                    <corners android:radius="30dp" />
                    <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" /> <!-- 设置各个方向的间隔 -->
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- On normal -->
    <item android:state_focused="false" android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#f7f7f7"></solid>
                    <!-- 线的宽度，颜色灰色 -->
                    <stroke android:width="1px" android:color="#dddddd"></stroke>

                    <!-- 矩形的圆角半径 -->
                    <corners android:radius="30dp" />
                    <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" /> <!-- 设置各个方向的间隔 -->
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- On disable -->
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#f7f7f7"></solid>
                    <!-- 线的宽度，颜色灰色 -->
                    <stroke android:width="1px" android:color="#dddddd"></stroke>

                    <!-- 矩形的圆角半径 -->
                    <corners android:radius="30dp" />
                    <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" /> <!-- 设置各个方向的间隔 -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>