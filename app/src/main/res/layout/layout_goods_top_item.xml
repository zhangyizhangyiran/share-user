<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/Color_Theme_White"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20">

    <LinearLayout
        android:id="@+id/ds"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/top_goods_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_home_text_bg"
            android:ellipsize="end"
            android:lines="1"
            android:maxLength="8"
            android:maxLines="1"
            android:paddingBottom="@dimen/dp_3"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6"
            android:paddingTop="@dimen/dp_3"
            android:text="@string/testing"
            android:textColor="@color/Color_Theme_White"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/top_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:text="箱子001A"
            android:textColor="@color/Color_Theme_Text_Label"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <TextView
        android:id="@+id/top_goods_status"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:ellipsize="end"
        android:gravity="center_vertical|end"
        android:maxLines="1"
        android:text="状态"
        android:textColor="@color/Color_Theme_Main_Red"
        android:textSize="@dimen/sp_14" />

</LinearLayout>



