<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.soe.sharesoe.module.mycenter.activity.MyCenterEditActivity">

    <include layout="@layout/include_my_center_bar"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/activity_my_center_TextInputLayout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="@dimen/dp_80"
        app:counterOverflowTextAppearance="@style/counterOverflowTextAppearance"
        app:errorTextAppearance="@style/errorAppearance"
        app:hintAnimationEnabled="true"
        app:hintEnabled="true"
        app:hintTextAppearance="@style/hintAppearance"
        app:passwordToggleTint="#b3b0b0"

        app:theme="@style/TextInputLayoutLineColor">

        <com.soe.sharesoe.module.member.edittext.AutoCheckEditText
            android:id="@+id/activity_my_center_auto_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:drawableEnd="@mipmap/icon_clear"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:textSize="14sp"/>

    </android.support.design.widget.TextInputLayout>


</LinearLayout>
